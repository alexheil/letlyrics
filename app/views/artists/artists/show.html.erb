<%= provide(:title, sanitize(@artist.name) + " Lyrics") %>

<% if @albums.any? %>

  <div class="mini-text bold">
    <span class="border-bottom">ALBUMS</span>
  </div>

  <div class="pb1"></div>

  <% @albums.each do |album| %>
    
    <div class="title1">
      <%= link_to album.name, artist_album_path(@artist, album), class: "secondary-link" %>
    </div>

    <div class="pb1"></div>

    <% if album.tracks.any? %>
      <% album.tracks.each do |track| %>

        <%= link_to track.name, artist_album_track_path(@artist, album, track), class: "third-link" %>

        <div class="pbhalf"></div>

      <% end %>
      <div class="pb2"></div>
    <% end %>

  <% end %>

<% end %>