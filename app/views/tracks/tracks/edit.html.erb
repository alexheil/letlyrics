<%= provide(:title, "Edit Lyrics") %>

<div class="title2">
  Edit Lyrics
</div>

<div class="pb5"></div>

<div class="form-container">
  <%= form_for(@track, url: artist_album_track_path(@artist, @album)) do |f| %>
    <span id="track_errors"><%= render 'partials/errors/track_errors' %></span>

      <%= f.label :artist_name, 'Artist' %>
      <div class="pb1"></div>
      <%= f.text_field :artist_name, placeholder: 'Artist\'s Name', value: (@artist ? @artist.name : ''), class: "text-field" %>
      <div class="pb3"></div>
          
      <%= f.label :album_name, 'Album' %>
      <div class="pb1"></div>
      <%= f.text_field :album_name, placeholder: 'Album\'s Title', value: (@album ? @album.name : ''), class: "text-field" %>
      <div class="pb3"></div>
          
      <%= f.label :name, 'Track' %>
      <div class="pb1"></div>
      <%= f.text_field :name, placeholder: 'Track\'s Title', class: "text-field" %>
      <div class="pb3"></div>
          
      <%= f.label :content, 'Lyrics' %>
      <div class="pb1"></div>
      <%= f.text_area :content, placeholder: 'Track\'s Lyrics', class: "text-area" %>
      <div class="pb3"></div>

      <%= f.submit "Update Lyrics", data: { disable_with: 'Updating...' }, class: "main-button" %>
  <% end %>
</div>