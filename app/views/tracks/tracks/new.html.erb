<%= provide(:title, "Add Lyrics") %>

<div class="container">

  <div class="title3 center pb3 bold">
    Add Lyrics
  </div>

  <div class="form-container border">
    <%= form_for(@track, url: tracks_path) do |f| %>
      <span id="track_errors"><%= render 'partials/errors/track_errors' %></span>

      <div class="field">
        <%= f.label :artist_name %>
        <%= f.text_field :artist_name, class: "text-field" %>
      </div>

      <div class="field">
        <%= f.label :album_name %>
        <%= f.text_field :album_name, class: "text-field" %>
      </div>

      <div class="field">
        <%= f.label :name %>
        <%= f.text_field :name, class: "text-field" %>
      </div>

      <div class="field">
        <%= f.label :content, "Lyrics" %>
        <%= f.text_area :content, class: "text-area" %>
      </div>

      <%= f.submit "Add Lyrics", data: { disable_with: 'Adding...' }, class: "main-button" %>
    <% end %>
  </div>

</div>