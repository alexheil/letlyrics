<%= provide(:title, sanitize(@artist.name + " : " + @track.name) + " Lyrics") %>

<div class="best">
  <%= @track.content %>
</div>

<%= render 'partials/meta/transition_content' %>

<% if @albums.any? %>

  <div class="title1">
    More lyrics for <%= @artist.name %>
  </div>

  <div class="pb3"></div>

  <% @albums.each do |album| %>
    
    <div class="title1">
      <%= link_to album.name, artist_album_path(@artist, album), class: "secondary-link" %>
    </div>

    <div class="pb1"></div>

    <% if album.tracks.any? %>
      <% album.tracks.each do |track| %>

        <%= link_to track.name, artist_album_track_path(@artist, album, track), class: "third-link" %>

        <div class="pbhalf"></div>

      <% end %>
      <div class="pb2"></div>
    <% end %>

  <% end %>

<% end %>