<%= provide(:title, "Register") %>

<div class="title2 white">
  Register
</div>

<div class="pb5"></div>

<div class="form-container">
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= render "users/shared/error_messages", resource: resource %>

    <%= f.label :email, 'Email' %>
    <div class="pb1"></div>
    <%= f.email_field :email, placeholder: 'Your email address', class: "text-field" %>
    <div class="pb3"></div>
        
    <%= f.label :password, 'Password' %> * <span class="mini-text">Must be at least <%= @minimum_password_length ? @minimum_password_length : "8" %> characters</span>
    <div class="pb1"></div>
    <%= f.password_field :password, placeholder: 'Password', class: "text-field" %>
    <div class="pb3"></div>

    <%= f.submit "Create account", data: { disable_with: 'Creating...' }, class: "main-button" %>
  <% end %>
</div>

<div class="pb5"></div>
<div class="center">
  <%= link_to "Already have an account? Sign in here.", sign_in_path, class: "secondary-link" %>
</div>